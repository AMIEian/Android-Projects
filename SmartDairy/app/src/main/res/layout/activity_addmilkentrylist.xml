<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/common_google_signin_btn_text_light_disabled"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="Total Ltr."
                            />
                        <TextView
                            android:id="@+id/id_liter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#009400"
                            android:text="0000.00"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="FAT"
                            />
                        <TextView
                            android:id="@+id/id_fat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff0000"
                            android:text="0000.00"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="SNF"
                            />
                        <TextView
                            android:id="@+id/id_snf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#0000ff"
                            android:text="0000.00"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="Rate"
                            />
                        <TextView
                            android:id="@+id/id_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#C70039"
                            android:text="0000.00"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="Amount."
                            />
                        <TextView
                            android:id="@+id/id_amt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000.00"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/common_google_signin_btn_text_light_disabled"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:id="@+id/grptime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_margin="10dp">
                        <RadioButton
                            android:id="@+id/rdmorning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Morning"
                            android:checked="true"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"/>
                        <RadioButton
                            android:id="@+id/rdevening"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Evening"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"/>
                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="4"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Date"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtdate"
                        android:layout_width="wrap_content"
                        android:hint="Select Date"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:layout_height="30dp"/>
                    <ImageButton
                        android:id="@+id/btndate"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.5"
                        android:background="#ffffff"
                        app:srcCompat="@drawable/ic_date_range_black_24dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="7dp">
                    <ListView
                        android:id="@+id/listviewstatement"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </ListView>
                </android.support.v7.widget.CardView>


        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:backgroundTint="@color/colorPrimary"
            app:borderWidth="0dp"
            android:elevation="6dp"
            app:fabSize="auto"
            app:srcCompat="@drawable/ic_add_circle_outline_black_24dp"
            app:rippleColor="@color/colorPrimaryDark"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"/>
    </RelativeLayout>

</LinearLayout>
