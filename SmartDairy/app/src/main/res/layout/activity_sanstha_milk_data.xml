<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView_dash122"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id_vsidairysangamner">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>
    <TextView
        android:id="@+id/id_custname1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="From Date:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btndate"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="#fffafafa"
            android:gravity="center"
            app:srcCompat="@drawable/ic_date_range_black_24dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="To Date:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date2"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btndate2"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="#fffafafa"
            android:gravity="center"
            app:srcCompat="@drawable/ic_date_range_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/btnmorning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Morning"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btnevening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:text="Evening"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="15sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff14b590">

        <TableRow android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:text="दिनांक"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_width="45dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <TextView
                android:text="लिटर"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_width="45dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <TextView
                android:text="फॅट"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_width="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <TextView
                android:text="Snf"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_width="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <TextView
                android:text="प्रोटीन"
                android:id="@+id/lbl_pro"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:layout_width="30dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:textSize="15sp"/>
            <TextView
                android:text="कमी"
                android:id="@+id/lbl_kami"
                android:textColor="#ffffff"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/lbl_nash"
                android:text="नाश"
                android:layout_width="30dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/lbl_japt"
                android:text="जप्त"
                android:layout_width="30dp"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:visibility="gone"
                android:textSize="15sp"/>

        </TableRow>

    </TableLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/table1">
            </TableLayout>
            <TableLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff14b590">

                <TableRow android:padding="10dp"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <TextView
                        android:text="एकुण "
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:layout_width="35dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tliter"
                        android:text="0.00"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:layout_width="90dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>

                    <TextView
                        android:text=""
                        android:layout_gravity="center"
                        android:textColor="#ffffff"
                        android:layout_width="30dp"
                        android:layout_weight="1"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/tlow"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:layout_width="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/tnash"
                        android:text="0"
                        android:layout_width="50dp"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/tjapt"
                        android:text="0"
                        android:layout_width="50dp"
                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textSize="15sp"/>

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
</LinearLayout>
