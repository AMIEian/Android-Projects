<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EncodingEPCActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:padding="4dp">
                    <Button
                        android:id="@+id/expandButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="9dp"
                        android:padding="4dp"
                        android:background="@drawable/ripple_effect_button"
                        android:text="Expand"
                        android:textColor="@color/rainbow_white"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"/>
                    <Button
                        android:id="@+id/collapseButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="9dp"
                        android:padding="4dp"
                        android:background="@drawable/ripple_effect_button"
                        android:text="Collapse"
                        android:textColor="@color/rainbow_white"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="9dp"
            android:background="@drawable/cardview_background"
            android:orientation="vertical">
            <TextView
                android:id="@+id/StoreIdShopTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Store Id: "
                android:textColor="@color/iridium"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:padding="9dp"
                android:layout_margin="9dp"
                android:background="@drawable/transparent_blue_border_round_corner"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Scanned"
                    android:textColor="@color/iridium"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:layout_margin="4dp"/>
                <TextView
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Progress"
                    android:textColor="@color/iridium"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:layout_margin="4dp"/>
                <TextView
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="%"
                    android:visibility="gone"
                    android:textColor="@color/iridium"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:layout_margin="4dp"/>
                <TextView
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Time"
                    android:textColor="@color/iridium"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:layout_margin="4dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/totalScanTV"
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="@color/iridium"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:layout_margin="4dp"/>
                <TextView
                    android:id="@+id/progressTV"
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="@color/iridium"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:layout_margin="4dp"/>
                <TextView
                    android:id="@+id/precentTV"
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="%"
                    android:visibility="gone"
                    android:textColor="@color/iridium"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:layout_margin="4dp"/>
                <TextView
                    android:id="@+id/timeTV"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Time"
                    android:textColor="@color/iridium"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:layout_margin="4dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/inventoryScanStartBtn"
                    android:layout_weight="0.45"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Start Scan"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto"
                    android:background="@drawable/button_blue_selector"
                    android:textColor="@color/rainbow_white"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="@color/iridium"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/finishScanBtn"
                    android:layout_weight="0.45"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="4dp"
                    android:text="Finish Scan"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto"
                    android:background="@drawable/button_blue_selector"
                    android:textColor="@color/rainbow_white"
                    android:textAlignment="center"/>

            </LinearLayout>
            <ListView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />




        </LinearLayout>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>