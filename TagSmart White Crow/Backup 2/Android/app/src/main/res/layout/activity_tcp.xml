<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EncodingEPCActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="9dp"
            android:background="@drawable/cardview_background"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="TCP Settings"
                android:textColor="@color/iridium"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:layout_marginTop="19dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TCP Hostname"
                android:textColor="@color/iridium"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:padding="9dp"
                android:layout_marginTop="9dp"/>
            <EditText
                android:id="@+id/editTextTCP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="9dp"
                android:hint="Hostname"
                android:textColor="@color/iridium"
                android:inputType="text"
                android:fontFamily="@font/roboto"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Port Number"
                android:textColor="@color/iridium"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:padding="9dp"
                android:layout_marginTop="9dp"
                />
            <EditText
                android:id="@+id/editTextPort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/iridium"
                android:inputType="text"
                android:padding="9dp"
                android:hint="Enter port number"/>

            <Button
                android:id="@+id/TCPSetBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:text="Set"
                android:paddingLeft="59dp"
                android:paddingRight="59dp"
                android:textSize="12sp"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:fontFamily="@font/roboto"
                android:background="@drawable/button_blue_selector"
                android:textColor="@color/rainbow_white"
                android:textAlignment="center"/>

        </LinearLayout>

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>