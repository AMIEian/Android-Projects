<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="49dp"
    sothree:umanoShadowHeight="4dp"
    sothree:umanoParallaxOffset="100dp"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoOverlay="true"
    sothree:umanoScrollableView="@+id/tv1">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" >
                <FrameLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:id="@+id/rl_inner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/toolbar_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:textColor="@color/rainbow_white"
                            android:fontFamily="@font/roboto"
                            android:padding="4dp"
                            android:text="Inventory"/>
                        <Button
                            android:id="@+id/expandButton"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="4dp"
                            android:background="@drawable/expand_buton"
                            android:layout_marginRight="4dp"
                            android:layout_marginLeft="4dp"
                            android:layout_toLeftOf="@+id/collapseButton"/>
                        <Button
                            android:id="@+id/collapseButton"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="4dp"
                            android:background="@drawable/collapse_buton"
                            android:layout_marginRight="9dp"
                            android:layout_marginLeft="9dp"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                </FrameLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="@color/colorPrimary">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="9dp"
                android:background="@drawable/cardview_background"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/StoreIdShopTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Store Id: "
                    android:textColor="@color/iridium"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:padding="9dp"
                    android:layout_margin="9dp"
                    android:background="@drawable/transparent_blue_border_round_corner"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="My Count"
                        android:textColor="@color/iridium"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp"
                        android:layout_margin="4dp"/>
                    <TextView
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Team Count"
                        android:textColor="@color/iridium"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp"
                        android:layout_margin="4dp"/>
                    <TextView
                        android:layout_weight="0.3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Team Progress"
                        android:textColor="@color/iridium"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp"
                        android:layout_margin="4dp"/>
                    <TextView
                        android:layout_weight="0.25"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Time"
                        android:textColor="@color/iridium"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="4dp"
                        android:layout_margin="4dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/totalScanTV"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text=""
                        android:textColor="@color/iridium"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"
                        android:padding="4dp"
                        android:layout_margin="4dp"/>
                    <TextView
                        android:id="@+id/progressTV"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text=""
                        android:textColor="@color/iridium"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"
                        android:padding="4dp"
                        android:layout_margin="4dp"/>
                    <TextView
                        android:id="@+id/precentTV"
                        android:layout_weight="0.3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text=""
                        android:textColor="@color/iridium"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"
                        android:padding="4dp"
                        android:layout_margin="4dp"/>
                    <TextView
                        android:id="@+id/timeTV"
                        android:layout_weight="0.25"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text=""
                        android:textColor="@color/iridium"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp"
                        android:padding="4dp"
                        android:layout_margin="4dp"/>

                </LinearLayout>
                <ListView
                    android:id="@+id/summaryListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
                </ListView>



            </LinearLayout>

        </RelativeLayout>


    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="false"
        android:id="@+id/dragView">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/list_header_title"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/toolbar_dropshadow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/titleSliding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text=""
                android:textColor="@color/rainbow_white"
                android:fontFamily="@font/roboto"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Missing Barcode / EPC List. Click to search and scan."
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/roboto"
            android:textSize="11sp"
            android:padding="4dp"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:padding="4dp">
            <TableRow android:background="@color/colorPrimary" android:padding="5dp">
                <TextView
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Barcode"
                    android:textColor="@color/iridium"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=""/>
                <TextView
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="EPC"
                    android:textColor="@color/iridium"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"/>
            </TableRow>
        </TableLayout>

        <ListView
            android:id="@+id/categoryList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>