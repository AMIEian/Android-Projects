<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/logo"
        android:id="@+id/logoImg"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/logoImg"
        android:text="TagSmart"
        android:textColor="@color/rainbow_white"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="9dp"
        android:background="@drawable/cardview_background"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="What's My Password?"
            android:textColor="@color/iridium"
            android:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:layout_marginTop="19dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textColor="@color/iridium"
            android:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:padding="9dp"
            android:layout_marginTop="9dp"/>
        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="9dp"
            android:hint="Enter e-mail address"
            android:textColor="@color/iridium"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/roboto"/>

        <Button
            android:id="@+id/fpBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="Submit"
            android:paddingLeft="59dp"
            android:paddingRight="59dp"
            android:textSize="12sp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:fontFamily="@font/roboto"
            android:background="@drawable/button_blue_selector"
            android:textColor="@color/rainbow_white"
            android:textAlignment="center"/>

    </LinearLayout>

</RelativeLayout>